<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand">Airbnb</a>
    <div class="collapse navbar-collapse">
      <div class="ms-auto flex">
        <form class="d-flex my-2 my-lg-0">
          <input class="form-control me-2" name="query" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
      <%= link_to 'Add Flat', new_flat_path, class: "btn btn-outline-primary my-2 my-sm-0 ms-2"%>
    </div>
  </div>
</nav>

<div class="container my-4">

  <div class="row g-4">
    <% @flats.each do |flat| %>
    <div class="col-4 card">
      <div class="flat-picture">
        <img src="<%= flat.picture %>" alt="<%= flat.name %>" class="img-fluid">
      </div>
      <div class="flat_info">
        <h3><%= flat.name %></h3>
        <p><%= flat.address %></p>
        <div class="d-flex">
          <p><%= flat.price_per_night %>â‚¬</p>
          <p class="mx-2"><%= flat.number_of_guests %> guests</p>
        </div>
      </div>
      <div class="flat-clickables">
        <%= link_to 'More Info', flat_path(flat.id), class: "mx-2"%>
        <%= link_to 'Edit', edit_flat_path(flat.id), class: "mx-2"%>
        <%= link_to 'Remove', flat_path(flat.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "mx-2"%>
      </div>
    </div>
    <% end %>
  </div>

</div>
